<%
    const pageData = {
        title: "Profile",
        icon: "/images/profile-1.svg", 
        currentPage: "profile" 
    };

    const pageBody = `
    
        <header class="mobile-header mobile-only">
            <h1>Profile</h1>
            <button class="edit-profile-button">
                <img src="/images/edit-profile.svg" alt="Edit profile button" />
            </button>
        </header>

        <main class="profile-container">

            <div class="intro-section desktop-only">
                <h1>Profile settings</h1>
                <button class="edit-profile-button">
                    <img src="/images/edit-profile.svg" alt="Edit profile button" />
                </button>
            </div>

            <div class="profile-content-container">

                <aside class="profile-avatar-section">
                    <img src="/images/avatar.svg" alt="User avatar" />
                    <h2 class="mobile-username mobile-only">Mister Biznes</h2>
                    <button class="change-avatar-button desktop-only">
                        Change avatar
                    </button>
                </aside>

                <section class="profile-details-section">

                    <form class="profile-form">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <div class="input-wrapper">
                                <img src="/images/user-icon.svg" alt="" class="input-icon-left" />
                                <input type="text" id="username" name="username" placeholder="Enter username" />
                                <button type="button" class="clear-input-button" aria-label="Clear username">
                                    <img src="/images/close.svg" alt="" />
                                </button>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <div class="input-wrapper">
                                <img src="/images/mail-icon.svg" alt="" class="input-icon-left" />
                                <input type="email" id="email" name="email" placeholder="Enter email" />
                                <button type="button" class="clear-input-button" aria-label="Clear email">
                                    <img src="/images/close.svg" alt="" />
                                </button>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="bio">Bio</label>
                            <textarea id="bio" name="bio" placeholder="Нада заніматися бізнесом, а не сидіть в тік токє ..."></textarea>
                        </div>
                    </form>


                    <div class="profile-settings">
                        <div class="setting-item">
                            <label for="notifications">Receive notifications</label>
                            <label class="switch">
                                <input type="checkbox" id="notifications" checked> <span class="slider round"></span>
                            </label>
                        </div>
                        <div class="setting-item">
                            <label for="dark-mode">Dark mode</label>
                            <label class="switch">
                                <input type="checkbox" id="dark-mode" checked>
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    `;
%>

<%- include('layout', { 
    title: pageData.title, 
    icon: pageData.icon, 
    currentPage: pageData.currentPage, 
    body: pageBody
}) %>